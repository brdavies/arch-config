[user]
	name = Ben Davies
	email = brdavies@gmail.com
[color]
	diff = auto
	branch = auto
	status = auto
[core]
	editor = emacsclient
[alias]
	st = status -sb
	stat = status
        ci = commit
        co = checkout
        br = branch
        logg = log --graph --decorate --pretty=oneline --abbrev-commit
        gdiff = difftool
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        logm = log --graph --decorate --pretty=oneline --abbrev-commit --merges
        lg1 = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
        lg2 = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%cD%C(reset) %C(bold green)(%cr)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)' --abbrev-commit
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %Cgreen(%cr)%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        oldest-ancestor = !zsh -c 'diff -u <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | sed -ne \"s/^ //p\" | head -1' -
        tags = for-each-ref --count=10 --sort='-*authordate' --format='%(refname:short) (%(*authordate))'
        ignored = ls-files --others -i --exclude-standard

[diff]
        tool = meld
#        tool = ediff
        guitool = ediff

[difftool "ediff"]
        cmd = ~/.config/git/ediff.sh $LOCAL $REMOTE $MERGED

[merge]
        tool = ediff

[mergetool "ediff"]
        cmd = ~/.config/git/ediff.sh $LOCAL $REMOTE $MERGED $BASE
        trustExitCode = true
